{{ application_log_dir }}/uwsgi/*.log {
    daily
    missingok
    rotate 60
    compress
    delaycompress
    notifempty
    create 0640 {{ application_user }} {{ application_group }}
    sharedscripts

    postrotate
        [ -s {{ virtualenv_path }}/run/uwsgi.pid ] && kill -USR1 `cat {{ virtualenv_path }}/run/uwsgi.pid`
    endscript
}